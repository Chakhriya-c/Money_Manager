import pandas as pd             #for file reading         
import matplotlib.pyplot as plt #for plotting 

headers = ["Date", "Category", "Expense", "Total"] 
df = pd.read_csv('university_records.csv', usecols=headers) #read file

#Insert Month
print ("Insert Month:")
month = input()

#storing data
data_plot = []
label_plot = []
amount_of_data = len(df.Date)

for row in range(len(df.Date)):
    if month == df.Date[row][3:5]: #df.Date[row][3:5]
        if df.Expense[row] <= 0:
            selected_Category = df.Category[row]
            selected_Expense = abs(int((df.Expense[row])))

            data_plot.append(selected_Expense)
            label_plot.append(selected_Category)

        else :
            pass

#setting graph
plt.pie(data_plot, labels = label_plot)

#show graph
plt.show()



            
  
        
        